{
  "name": "kheiron-ui",
  "version": "1.0.1",
  "license": "MIT",
  "author": "Kheiron",
  "main": "dist/index.js",
  "module": "dist/kheiron-ui.esm.js",
  "typings": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "react",
    "react-dom",
    "ui",
    "form"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "clean": "rimraf dist",
    "build": "pnpm clean && npx rollup -c --bundleConfigAsCjs",
    "build-storybook": "storybook build",
    "husky": "husky",
    "lint": "eslint ./src ./stories",
    "lint-staged": "lint-staged",
    "format": "prettier --write ./src/**/*.{ts,tsx} ./stories/**/*.{ts,tsx}",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "storybook": "storybook dev -p 6006",
    "test": "dts test --passWithNoTests"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "size-limit": [
    {
      "path": "dist/kheiron-ui.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/kheiron-ui.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@eslint/js": "^9.1.1",
    "@faker-js/faker": "^8.4.1",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@size-limit/preset-small-lib": "^11.1.2",
    "@storybook/addon-essentials": "^8.1.2",
    "@storybook/addon-info": "^6.0.0-alpha.2",
    "@storybook/addon-links": "^8.1.2",
    "@storybook/addons": "^7.6.0-beta.2",
    "@storybook/react": "^8.1.2",
    "@storybook/react-vite": "^8.1.2",
    "@tsconfig/recommended": "^1.0.6",
    "@tsconfig/vite-react": "^3.0.2",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.78",
    "@types/react-dom": "^18.2.25",
    "babel-loader": "^9.1.3",
    "dts-cli": "^2.0.4",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "globals": "^15.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "rimraf": "^5.0.7",
    "rollup": "^4.18.0",
    "size-limit": "^11.1.2",
    "storybook": "^8.1.2",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.7.0",
    "vite": "^5.2.8",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "dependencies": {
    "@emotion/react": "^11.11.4"
  }
}
