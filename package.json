{
  "name": "kheiron-ui",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Kheiron",
  "main": "dist/index.js",
  "module": "dist/kheiron-ui.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "build-storybook": "storybook build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "storybook": "storybook dev -p 6006",
    "test": "dts test --passWithNoTests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "engines": {
    "node": ">=12"
  },
  "size-limit": [
    {
      "path": "dist/kheiron-ui.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/kheiron-ui.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@size-limit/preset-small-lib": "^11.1.2",
    "@storybook/addon-essentials": "^8.1.0-alpha.7",
    "@storybook/addon-info": "^6.0.0-alpha.2",
    "@storybook/addon-links": "^8.1.0-alpha.7",
    "@storybook/addons": "^7.6.0-beta.2",
    "@storybook/react": "^8.1.0-alpha.7",
    "@storybook/react-vite": "^8.1.0-alpha.7",
    "@tsconfig/recommended": "^1.0.6",
    "@tsconfig/vite-react": "^3.0.2",
    "@types/react": "^18.2.78",
    "@types/react-dom": "^18.2.25",
    "babel-loader": "^9.1.3",
    "dts-cli": "^2.0.4",
    "husky": "^9.0.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "size-limit": "^11.1.2",
    "storybook": "^8.1.0-alpha.7",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.8"
  }
}
